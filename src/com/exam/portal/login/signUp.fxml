<AnchorPane prefHeight="494.0" prefWidth="694.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exam.portal.login.LoginController">
   <children>
      <BorderPane prefHeight="597.0" prefWidth="698.0" style="-fx-border-color: black; -fx-border-width: 2px;">
         <left>
            <AnchorPane prefHeight="600.0" prefWidth="305.0" style="-fx-background-color: purple;" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <AnchorPane prefHeight="600.0" prefWidth="377.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" layoutX="14.0" layoutY="48.0" prefHeight="42.0" prefWidth="140.0" style="-fx-background-color: transparent;" text="Sign Up">
                     <font>
                        <Font name="Californian FB" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="pName" alignment="CENTER" layoutX="99.0" layoutY="144.0" prefHeight="38.0" prefWidth="246.0" promptText="Enter Name" style="-fx-border-color: Black; -fx-border-width: 0px 0px 2px 0px;">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="pNumber" alignment="CENTER" layoutX="99.0" layoutY="270.0" prefHeight="39.0" prefWidth="250.0" promptText="Enter Contact No." style="-fx-border-color: Black; -fx-border-width: 0px 0px 2px 0px;">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="pMail" alignment="CENTER" layoutX="99.0" layoutY="207.0" prefHeight="40.0" prefWidth="248.0" promptText="Enter Email" style="-fx-border-color: Black; -fx-border-width: 0px 0px 2px 0px;">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="pPassword" alignment="CENTER" layoutX="97.0" layoutY="327.0" prefHeight="35.0" prefWidth="254.0" promptText="Create Password" style="-fx-border-color: Black; -fx-border-width: 0px 0px 2px 0px;">
